{
    if(!place_meeting(x,y+sign(ysp),obj_wall))
    {
        y += sign(ysp);
    }
    if(place_meeting(x,y+sign(ysp),obj_wall) &amp;&amp; grounded == 0)
    {
        ysp += grav;
    } 
}
